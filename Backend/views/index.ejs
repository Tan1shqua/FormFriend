    <h2 style="text-align: left">Admin</h2>
    <h3>Register Admin</h3>
    <form id="admin-registration" class="border">
      <input type="text" name="name" placeholder="*Name" style="width: 100px" required=''><br>
      <input type="email" name="email" placeholder="*Email" style="width: 100px" required=''><br>
      <input type="password" name="password" placeholder="*Password" style="width: 100px" required=''><br>
      <button type="submit">Submit</button>
    </form><br>
    <h3>Login Admin</h3>
    <form id="admin-login" class="border">
      <input type="email" name="email" placeholder="*Email" style="width: 100px" required=''><br>
      <input type="password" name="password" placeholder="*Password" style="width: 100px" required=''><br>
      <button type="submit">Submit</button>
    </form><br>
    <code id='Result'></code>
  </section>
