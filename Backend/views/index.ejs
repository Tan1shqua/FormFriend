  <script>
    $(function () {
      $('#admin-registration').submit(function (e) {
        console.log(e)
        $.ajax({
          url: '/admin/register',
          type: 'post',
          data: $('#admin-registration').serialize(),
          success: function (data) {
            $('#Result').text(JSON.stringify(data));
          }
        });
        e.preventDefault();
      });
      $('#admin-login').submit(function (e) {
        $.ajax({
          url: '/admin/login',
          type: 'post',
          data: $('#admin-login').serialize(),
          success: function (data) {
            $('#Result').text(JSON.stringify(data));
          }
        });
        e.preventDefault();
      });
    });
  </script>
